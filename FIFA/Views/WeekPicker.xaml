<Page
    x:Class="FIFA.Views.WeekPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FIFA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Column="0" Grid.Row="0"
            Text="Crear semana"
            FontSize="50"
            HorizontalAlignment="Center"
            Margin= "0 70 0 0"/>
        <StackPanel Grid.Column="0" Grid.Row="1"
                    Margin="50 20 50 10">
            <TextBlock Text="La última semana creada en el sistema es la semana 04-2019. La semana siguiente a ser creada seria la semana 05-2019, la cual comprende las siguientes fechas:"
                       HorizontalAlignment="Center" TextWrapping="WrapWholeWords" FontSize="20"/>
            <ListBox Margin="10 20 10 10" HorizontalContentAlignment="Center">
                <ListBoxItem>Lunes, 2 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Martes, 3 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Miercoles, 4 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Jueves, 5 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Viernes, 6 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Sabado, 7 de Enero del 2019</ListBoxItem>
                <ListBoxItem>Domingo, 8 de Enero del 2019</ListBoxItem>
            </ListBox>
            <Button Margin="20 40 20 20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Content="Crear semana 05-2019"/>
        </StackPanel>

        <TextBlock 
            Grid.Column="1" Grid.Row="0"
            Text="Editar semana"
            FontSize="50"
            HorizontalAlignment="Center"
            Margin= "0 70 0 0"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock />
            <TextBox />
            <Button />
        </StackPanel>
    </Grid>
</Page>
